@model IEnumerable<WebApplicationPIT.Models.estado>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idestado }) |
                @Html.ActionLink("Details", "Details", new { id = item.idestado }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idestado })
            </td>
        </tr>
    }

</table>
