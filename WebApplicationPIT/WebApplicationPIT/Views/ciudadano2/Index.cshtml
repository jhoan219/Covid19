@model IEnumerable<WebApplicationPIT.Models.ciudadano>

@{
    ViewBag.Title = "Index";
    
       Layout = "~/Views/Shared/_Navigation.cshtml";
}

<h2>Index</h2>
   

<p>
    @Html.ActionLink("Registrar Ciudadano", "Create")<br />
    @Html.ActionLink("Consulta por Estado", "CiudadanoXEstado" )  

</p>
<table class="table">
    <tr>

        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.nacionalidad)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.tipodocumento)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.numdocumento)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.iddepartamento)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.idprovincia)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.iddistrito)
        </th>
        <th class="h5 mb-0 font-weight-bold text-gray-800">
            @Html.DisplayNameFor(model => model.estado.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
         
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.nombres)
        </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.nacionalidad)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.tipodocumento)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.numdocumento)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.iddepartamento)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.idprovincia)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.iddistrito)
            </td>
            <td class="h5 mb-0 font-weight-bold text-gray-800">
                @Html.DisplayFor(modelItem => item.estado.descripcion)
            </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id=item.idciudadano }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idciudadano }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idciudadano })
        </td>
    </tr>
}

</table>
